<Window x:Class="tagmane.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tagmane"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="SelectedTagBrush" Color="#E0FFE0"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- 左ペイン -->
        <DockPanel Grid.Column="0">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button Click="SelectFolder_Click">
                    <Button.Content>
                        <Image Source="/icon/open.png" Width="32" Height="32"/>
                    </Button.Content>
                    <Button.ToolTip>
                        <TextBlock Text="フォルダを選択"/>
                    </Button.ToolTip>
                </Button>
                <Button Click="SaveTagsButton_Click">
                    <Button.Content>
                        <Image Source="/icon/save.png" Width="32" Height="32"/>
                    </Button.Content>
                    <Button.ToolTip>
                        <TextBlock Text="現在のタグ状態を保存"/>
                    </Button.ToolTip>
                </Button>
                <Button Click="MakeTagsWithVLM_Click">
                    <Button.Content>
                        <Image Source="/icon/vlm.png" Width="32" Height="32"/>
                    </Button.Content>
                    <Button.ToolTip>
                        <TextBlock Text="VLMでタグを作成"/>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
            <ListBox x:Name="ImageListBox" SelectionChanged="ImageListBox_SelectionChanged"/>
        </DockPanel>

        <!-- 中央ペイン -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="UndoButton" Content="←" Background="Green" Foreground="White" Width="30" Height="30" Margin="5" Click="UndoButton_Click"/>
                <Button x:Name="RedoButton" Content="→" Background="Green" Foreground="White" Width="30" Height="30" Margin="5" Click="RedoButton_Click"/>
            </StackPanel>
            <Image x:Name="SelectedImage" Grid.Row="1" Stretch="Uniform"/>
            <TextBox x:Name="AssociatedText" Grid.Row="2" IsReadOnly="True" TextWrapping="Wrap"/>
        </Grid>

        <!-- 右ペイン1: 個別タグ -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="AddTagButton" Click="AddTagButton_Click">
                    <Button.Content>
                        <Image Source="/icon/add.png" Width="32" Height="32"/>
                    </Button.Content>
                    <Button.ToolTip>
                        <TextBlock Text="タグを追加"/>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="RemoveTagButton" Click="RemoveTagButton_Click">
                    <Button.Content>
                        <Image Source="/icon/erase.png" Width="32" Height="32"/>
                    </Button.Content>
                    <Button.ToolTip>
                        <TextBlock Text="タグを削除"/>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="VLMPredictButton" Click="VLMPredictButton_Click">
                    <Button.Content>
                        <Image Source="/icon/vlm.png" Width="32" Height="32"/>
                    </Button.Content>
                    <Button.ToolTip>
                        <TextBlock Text="VLMでタグを作成"/>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
            <ListView x:Name="TagListView" Grid.Row="1" SelectionMode="Multiple" SelectionChanged="TagListView_SelectionChanged"
                      ItemsSource="{Binding SelectedImage.Tags}" 
                      PreviewMouseLeftButtonDown="TagListView_PreviewMouseLeftButtonDown">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource SelectedTagBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="タグ" DisplayMemberBinding="{Binding}" Width="Auto"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- 右ペイン2: 全タグ -->
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="RemoveAllTagsButton" Click="RemoveAllTagsButton_Click">
                    <Button.Content>
                        <Image Source="/icon/erasem.png" Width="32" Height="32"/>
                    </Button.Content>
                    <Button.ToolTip>
                        <TextBlock Text="すべてのタグを削除"/>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="VLMPredictAllButton" Click="VLMPredictAllButton_Click">
                    <Button.Content>
                        <Image Source="/icon/vlm.png" Width="32" Height="32"/>
                    </Button.Content>
                    <Button.ToolTip>
                        <TextBlock Text="VLMですべての画像にタグを作成"/>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
            <ListView x:Name="AllTagsListView" Grid.Row="1" SelectionMode="Multiple" SelectionChanged="AllTagsListView_SelectionChanged"
                      ItemsSource="{Binding AllTags}" 
                      PreviewMouseLeftButtonDown="AllTagsListView_PreviewMouseLeftButtonDown">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter Property="Background" Value="{StaticResource SelectedTagBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="タグ" DisplayMemberBinding="{Binding Tag}" Width="120"/>
                        <GridViewColumn Header="数" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Count}" Width="30"/>
                                        <TextBlock Text="★">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCurrentImageTag}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- 右ペイン3: ログ、動作処理リスト、選択されたタグ -->
        <Grid Grid.Column="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- デバッグログの表示領域-->
            <TextBox x:Name="DebugLogTextBox" Grid.Row="0" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

            <!-- ログ表示用のTabControl -->
            <TabControl Grid.Row="1">
                <TabItem Header="メインログ">
                    <TextBox x:Name="MainLogTextBox" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                </TabItem>
                <TabItem Header="VLMログ">
                    <TextBox x:Name="VLMLogTextBox" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                </TabItem>
            </TabControl>

            <!-- Undo/Redoのための動作処理リスト -->
            <ListView x:Name="ActionListView" Grid.Row="2">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="操作" DisplayMemberBinding="{Binding ActionType}"/>
                        <GridViewColumn Header="詳細" DisplayMemberBinding="{Binding Description}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- 選択されたタグ -->
            <ListBox x:Name="SelectedTagsListBox" Grid.Row="3" IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>
