<Window x:Class="tagmane.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tagmane"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="tagmane" Height="450" Width="1200">
    <Window.Resources>
        <SolidColorBrush x:Key="SelectedTagBrush" Color="#E0FFE0"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- 左ペイン -->
        <DockPanel Grid.Column="0">
            <Button DockPanel.Dock="Top" Content="フォルダを選択" Click="SelectFolder_Click"/>
            <ListBox x:Name="ImageListBox" SelectionChanged="ImageListBox_SelectionChanged"/>
        </DockPanel>

        <!-- 中央ペイン -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="UndoButton" Content="←" Background="Green" Foreground="White" Width="30" Height="30" Margin="5" Click="UndoButton_Click"/>
                <Button x:Name="RedoButton" Content="→" Background="Green" Foreground="White" Width="30" Height="30" Margin="5" Click="RedoButton_Click"/>
            </StackPanel>
            <Image x:Name="SelectedImage" Grid.Row="1" Stretch="Uniform"/>
            <TextBox x:Name="AssociatedText" Grid.Row="2" IsReadOnly="True" TextWrapping="Wrap"/>
        </Grid>

        <!-- 右ペイン1: 個別タグ -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="AddTagButton" Content="+" Background="Green" Foreground="White" Width="30" Height="30" Margin="5" Click="AddTagButton_Click"/>
                <Button x:Name="RemoveTagButton" Content="-" Background="Red" Foreground="White" Width="30" Height="30" Margin="5" Click="RemoveTagButton_Click"/>
            </StackPanel>
            <ListView x:Name="TagListView" Grid.Row="1" SelectionMode="Multiple" SelectionChanged="TagListView_SelectionChanged">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource SelectedTagBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="タグ" DisplayMemberBinding="{Binding}" Width="Auto"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- 右ペイン2: 全タグ -->
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="RemoveAllTagsButton" Grid.Row="0" Content="-" Background="Red" Foreground="White" Width="30" Height="30" Margin="5" HorizontalAlignment="Center" Click="RemoveAllTagsButton_Click"/>
            <ListView x:Name="AllTagsListView" Grid.Row="1" SelectionMode="Multiple" SelectionChanged="AllTagsListView_SelectionChanged">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter Property="Background" Value="{StaticResource SelectedTagBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="タグ" DisplayMemberBinding="{Binding Tag}" Width="120"/>
                        <GridViewColumn Header="数" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Count}" Width="30"/>
                                        <TextBlock Text="★">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCurrentImageTag}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- 右ペイン3: 選択されたタグ -->
        <ListBox x:Name="SelectedTagsListBox" Grid.Column="4" IsEnabled="False"/>
    </Grid>
</Window>
